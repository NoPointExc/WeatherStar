<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_setting_for_city"
        android:key="@string/key_autolocate"
        android:summary="@string/summary_autolocate"
        android:title="@string/title_autolocate" />
    <MultiSelectListPreference
        android:defaultValue="@array/city_default"
        android:entries="@array/city_options"
        android:entryValues="@array/city_codes"
        android:icon="@drawable/ic_more"
        android:key="@string/key_selected_cities"
        android:title="@string/title_morecities" />
</PreferenceScreen>